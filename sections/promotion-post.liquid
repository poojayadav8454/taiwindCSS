{{- 'promotion-post.css' | asset_url | stylesheet_tag: preload: true -}}
{%- style -%}
  .section-{{ section.id }}-padding {

    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;

    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;

  }

  @media screen and (min-width: 750px) {

    .section-{{ section.id }}-padding {

      padding-top: {{ section.settings.padding_top }}px;

      padding-bottom: {{ section.settings.padding_bottom }}px;

    }
  }
{%- endstyle -%}
<section class="promotion-section container section-{{ section.id }}-padding">
  <div class="promotion-container">
    {% for block in section.blocks %}
      <div class="promotion-item">
        <div class="promotion_image">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 740 }}"
              width="740"
              height="740"
              alt="{{ block.settings.heading | escape }}"
              loading="lazy"
            >
          {% endif %}
        </div>

        {% if block.settings.heading != blank %}
          <h3 class=" text-red-900" >{{ block.settings.heading }}</h3>
        {% endif %}
        {% if block.settings.description != blank %}
          <p class=" text-red-900"> {{ block.settings.description }}</p>
        {% endif %}
        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="shop-now-button ">{{ block.settings.button_text }}</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Promotion Section",
  "settings": [
     {

      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding_top",
      "default": 36

    },

    {

      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding_bottom",
      "default": 36

    }

   ],
  "blocks": [
    {
      "type": "promotion_block",
      "name": "Promotion Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Section",

    }
  ]
}
{% endschema %}
